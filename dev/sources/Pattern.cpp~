#include "Pattern.hpp"

// Constructors and Destructor
Pattern::Pattern(const std::vector<std::string>& uniforms,const char * vertex_path,const char * fragment_path, const char * geometry_path)
    :program_(vertex_path,fragment_path,geometry_path)
    ,uniform_names_(uniforms)
    ,uniform_values_(uniforms.size())
{}

// getters
    Vec3 Pattern::getValue(unsigned i);

// setters
    void setValue(unsigned i, Vec3 value);
