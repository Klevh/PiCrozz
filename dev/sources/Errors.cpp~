#include "GLErrors.hpp"

// glGetError
void GLErrors::glGetError(std::function<void(void)> func){
    GLenum error = ::glGetError();
    
    if(error){
	std::ostringstream s;
	do{
	    s << "\n\t" << std::string((char*)gluErrorString(error));
	    error = ::glGetError();
	}while(error);

	func();

	throw GL_ERROR(s.str());
    }
}

// GL_ERROR
GLErrors::GL_ERROR::GL_ERROR(std::string error_log)
    :msg_(error_log)
{}
std::string GLErrors::GL_ERROR::what(){
    return msg_;
}

// GLEW_INIT_FAILED
std::string GLErrors::GLEW_INIT_FAILED::what(){
    return "GLEW initialization failed";
}
